<% provide(:title, 'Sign up') %>
<div class="main">
  <div class="form-box">
    <h1 class="font-style">Samplegram</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          
          <%= f.text_field :user_name, :placeholder => "ユーザーネーム", class: 'form-control' %>
          
          <%= f.password_field :password, :placeholder => "パスワード", class: 'form-control' %>
          
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <p class="acount-link">
      アカウントをお持ちでないですか？
      <%= link_to "登録する", signup_path %> 
    </p>
  </div>
</div>