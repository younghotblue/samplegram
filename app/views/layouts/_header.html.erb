<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Samplegram", root_path, id: "logo" %>
    <nav id="global-nav">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path, :method => :get do %>
            <i class="fas fa-home fa-2x"></i>
          <% end %>
        </li>
        <% if logged_in? %>
          <li>
            <%= link_to new_post_path, :method => :get do %>
              <i class="fas fa-camera fa-2x"></i>
            <% end %>
          </li>
          <li>
            <%= link_to notifications_path, :method => :get do %>
              <i class="far fa-heart fa-2x"></i>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <div class="header-gravatar">
                <%= gravatar_for current_user, size: 33 %>
              </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "ユーザー", users_path %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path, :method => :get do %>
              <i class="fas fa-sign-in-alt fa-2x"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


